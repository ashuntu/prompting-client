{
  "version": 1,
  "prompts": [
    {
        "prompt-filter": {
          "snap": "testSnap",
          "interface": "home",
          "constraints": {
            "path": "/home/ubuntu/test/.*/test-1.txt",
            "permissions": [ "write" ],
            "available-permissions": [ "read", "write", "execute" ]
          }
        },
        "reply": {
            "action": "allow",
            "lifespan": "single",
            // Being able to default missing constraints would be useful
            "constraints": {
                "path-pattern": "<REQUESTED_PATH>", // how do we handle this?
                "permissions": [ "read", "write" ]
            }
        }
    }
  ]
}
